<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/InputLinearLayout" android:layout_height="wrap_content" android:layout_width="match_parent">
        <EditText android:text="Enter Location" android:id="@+id/location_String_editText" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
        <Button android:text="Go" android:id="@+id/go" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/progressBar1"></ProgressBar>
    </LinearLayout>
    <LinearLayout android:id="@+id/LocationLinearLayout" android:layout_height="wrap_content" android:layout_width="match_parent">
		<TextView android:id="@+id/LocationTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="24sp"></TextView>
		<TextView android:id="@+id/CurrentDateTimeTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/CurrentConditionLinearLayout" android:layout_height="wrap_content">
		<ImageView android:id="@+id/ConditionIconImageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon" ></ImageView>
		<LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/CurrentConditionTextLinearLayout" android:layout_height="wrap_content">
			<TextView android:id="@+id/ConditionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:id="@+id/TempFCTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:id="@+id/HumidityTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	        <TextView android:id="@+id/WindTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"></TextView>
		</LinearLayout>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/ForecastConditionLinearLayout" android:layout_height="wrap_content">
		<ImageView android:id="@+id/ForecastIconImageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon" ></ImageView>
		<LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:id="@+id/ForecastConditionTextLinearLayout" android:layout_height="wrap_content">
			<TextView android:id="@+id/ForecastDoWTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:id="@+id/ForecastConditionTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:id="@+id/ForecastHLTextView" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>